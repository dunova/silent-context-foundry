[Unit]
Description=Unified Context Sync Daemon (user)
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/.local/share/silent-context-foundry/scripts
ExecStart=/usr/bin/env python3 %h/.local/share/silent-context-foundry/scripts/viking_daemon.py
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
